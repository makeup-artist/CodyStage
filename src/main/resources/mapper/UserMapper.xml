<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cody.codystage.mapper.UserMapper">

    <sql id="Base_Select_List">
        id,username,password,age,nickname,picture,description,updateTime,createTime,isAvailable,gender,tag,mobile,email
    </sql>

    <select id="queryUserByName" resultType="com.cody.codystage.entity.User" parameterType="string">
        select * from user
        where username=#{username}
    </select>

    <select id="queryUserById" resultType="com.cody.codystage.entity.User" parameterType="Long">
        select * from user
        where id=#{id}
    </select>
</mapper>